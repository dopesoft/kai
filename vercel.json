{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "functions": {
    "api/chat/threads.ts": {
      "maxDuration": 30
    },
    "api/chat/stream.ts": {
      "maxDuration": 30
    },
    "api/chat/messages.ts": {
      "maxDuration": 30
    },
    "api/integrations.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}