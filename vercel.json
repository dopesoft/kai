{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist/public",
  "functions": {
    "api/test.ts": {
      "maxDuration": 10
    },
    "api/chat/threads.ts": {
      "maxDuration": 30
    },
    "api/chat/threads/[threadId].ts": {
      "maxDuration": 30
    },
    "api/chat/stream.ts": {
      "maxDuration": 30
    },
    "api/chat/messages.ts": {
      "maxDuration": 30
    },
    "api/integrations.ts": {
      "maxDuration": 30
    },
    "api/memory/short-term.ts": {
      "maxDuration": 30
    },
    "api/memory/long-term.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ],
  "build": {
    "env": {
      "NODE_VERSION": "18.x",
      "NPM_CONFIG_OPTIONAL": "false"
    }
  }
}